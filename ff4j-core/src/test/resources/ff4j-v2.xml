<ff4j xmlns="http://www.ff4j.org/schema/ff4j" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ff4j.org/schema/ff4j-2.0.xsd">

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~ GLOBAL ACL (not entity) ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<acl>
		<permission target="WEB_CONSOLE" name="WEB_CONSOLE"
			grantedUsers="pierre" grantedRoles="" description="" />
	</acl>

	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~ ROLES ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->

	<roles>
		<role name="ADMINISTRATOR">
			<permission>ADMIN_FEATURES</permission>
			<permission>ADMIN_PROPERTIES</permission>
			<permission>TOGGLE_FEATURES</permission>
			<permission>VIEW_FEATURES</permission>
			<permission>VIEW_PROPERTIES</permission>
			<permission>VIEW_AUDITTRAIL</permission>
			<permission>VIEW_FEATUREUSAGE</permission>
		</role>

		<role name="SUPERUSER">
			<permission>TOGGLE_FEATURES</permission>
			<permission>VIEW_FEATURES</permission>
			<permission>VIEW_PROPERTIES</permission>
			<permission>VIEW_AUDITTRAIL</permission>
			<permission>VIEW_FEATUREUSAGE</permission>
		</role>

		<role name="USER">
			<permission>VIEW_FEATURES</permission>
			<permission>VIEW_PROPERTIES</permission>
			<permission>VIEW_AUDITTRAIL</permission>
			<permission>VIEW_FEATUREUSAGE</permission>
		</role>
	</roles>

	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~ USERS ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->

	<users>

		<!-- Definition of User -->
		<user uid="pierre" firstName="Pierre" lastName="Foioi"
			description="sample description if OK">
			<roles>
				<role>USER</role>
				<role>SUPERUSER</role>
			</roles>
			<permissions>
				<permission>ADMIN_FEATURES</permission>
				<permission>ADMIN_PROPERTIES</permission>
			</permissions>
		</user>

	</users>

	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~ FEATURES ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->

	<features>

		<feature uid="first" enable="true" description="description"
			groupName="GRP1">
			<acl>
				<permission name="FEATURE_TOGGLE" grantedUsers="pierre" />
				<permission name="FEATURE_VIEW" grantedRoles="EVERYONE" />
			</acl>
			<toggle-strategies>
				<toggle-strategy class="org.ff4j.strategy.PonderationStrategy">
					<param name="weight" value="0.5" />
				</toggle-strategy>
				<toggle-strategy name="Ponderation">
					<param name="weight" value="0.5" />
				</toggle-strategy>
			</toggle-strategies>
			<custom-properties>
				<property name="ppListInt" value="12,13,14" />
				<property name="digitValue" value="1"
					type="org.ff4j.property.domain.PropertyInt" fixedValues="0,1,2,3" />
			</custom-properties>
		</feature>

	</features>

	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~ PROPERTIES ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->

	<properties>
		<property name="a" value="AMER" fixedValues="AMER,EAST" />
		<property name="b" value="12" />
		<property name="c" value="12.5" />
		<property name="d" value="true" />
		<property name="e" value="hello" />
		<property name="f" value="12,13,14" />
		<property name="g" value="DEBUG"
			type="org.ff4j.property.domain.PropertyLogLevel" />
	</properties>

</ff4j>
