<?xml version="1.0" encoding="UTF-8" ?>
<ff4j xmlns="http://www.ff4j.org/schema/ff4j" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ff4j.org/schema/ff4j-2.0.xsd">
	
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	<!-- ~~ FEATURES       ~~ -->
	<!-- ~~~~~~~~~~~~~~~~~~~~ -->
	
	<features>
		
		<feature uid="AwesomeFeature" enable="true" description="some desc" />
	
		<feature uid="first" enable="true" description="description" >
			
			<security>
				<role name="USER" />
			</security>
			
			<custom-properties>
			  <property name="ppint" 	  type="org.ff4j.property.domain.PropertyInt" value="12"   />
			  <property name="ppdouble"   type="double"  value="12.5" />
			  <property name="ppboolean"  type="boolean" value="true" />
			  <property name="ppstring"   value="hello" />
			  <property name="ppListInt"  value="12,13,14" />
			  <property name="myLogLevel" value="DEBUG" type="org.ff4j.property.domain.PropertyLogLevel" />
			  <property name="digitValue" value="1" type="org.ff4j.property.domain.PropertyInt">
			  	<fixedValues>
			 		<value>0</value>
			 		<value>1</value>
			 		<value>2</value>
			 		<value>3</value>
			 	</fixedValues>
			  </property>
			  <property name="regionIdentifier" value="AMER" >
			 	<fixedValues>
			 		<value>AMER</value>
			 		<value>SSSS</value>
			 		<value>EAST</value>
			 		<value>EAST</value>
			 	</fixedValues>
			 </property>
			</custom-properties>
		</feature>
		
		<feature-group name="GRP0">
			<feature uid="second" enable="false" description="description" >
				<security>
					<role name="USER" />
				</security>
			</feature>
		</feature-group>
		
		<feature-group name="GRP1">
			<feature uid="forth" enable="true" description="description" >
				<flipstrategy class="org.ff4j.feature.strategy.expression.ExpressionToggleStrategy">
					<param name="expression" value="third | second" />
				</flipstrategy>
				<security>
					<role name="ADMINISTRATOR" />
					<role name="BETA-TESTER" />
				</security>
			</feature>
			<feature uid="third" enable="false" >
				<security>
					<role name="ADMINISTRATOR" />
					<role name="BETA-TESTER" />
				</security>
				<flipstrategy class="org.ff4j.feature.strategy.expression.ExpressionToggleStrategy">
					<param name="expression" value="third | second" />
				</flipstrategy>
			</feature>
		</feature-group>
	
	</features>
	
	<properties>	
	 <property name="a" value="AMER" >
	 	<fixedValues>
	 		<value>AMER</value>
	 		<value>EAST</value>
	 		<value>EAST</value>
	 		<value>EAST</value>
	 	</fixedValues>
	 </property>
	 <property name="b"	 type="int" value="12"   />
	 <property name="b" type="short" value="12"   />
	 <property name="c"  type="double" value="12.5" />
	 <property name="d"  type="boolean" value="true" />
	 <property name="e"  type="string" value="hello" />
	 <property name="f"  value="12,13,14" />
	 <property name="g"  type="org.ff4j.property.domain.PropertyLogLevel" value="DEBUG" />
	 <property name="h"  type="float" value="3.4" />
	 <property name="i"  type="byte" value="a" />
	 <property name="j"  type="biginteger" value="100000000" />
	 <property name="k"  type="bigdecimal" value="200000000.1234567" />
	 <property name="l"  type="long" value="1234567890" />
	</properties>
	
	
</ff4j>